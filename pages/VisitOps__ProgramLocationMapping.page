<apex:page docType="html-5.0" standardController="VisitOps__Program__c" extensions="VisitOps.ProgramLocationMappingCtrl" id="ProgramLocationMappingCtrlId">
     <script type="text/javascript">
        function selectAllCheckboxes(obj,receivedInputID){
            var inputCheckBox = document.getElementsByTagName("input");
            for(var i=0; i<inputCheckBox.length; i++){
                if(inputCheckBox[i].id.indexOf(receivedInputID)!=-1){
                    inputCheckBox[i].checked = obj.checked;
                }
            }
        }
    </script>
    <apex:form style="overflow:auto;">
        <apex:outputPanel style="overflow:auto; height:50px;margin: 0 2px" >     
            <apex:dataTable value="{!wrapLocationList}" var="wrapVT" id="table" border="1">
                <apex:column >
                    <apex:facet name="header">
                        <apex:inputCheckbox onclick="selectAllCheckboxes(this,'inputId')"/>
                    </apex:facet>
                    <apex:inputCheckbox value="{!wrapVT.selected}" id="inputId"/>
                </apex:column>
                <apex:column headerValue="Location" value="{!wrapVT.locs.Name}" />
            </apex:dataTable>
            <!--<apex:commandButton value="Apply" action="{!getSelected}" style="margin-left:50px" />-->
            <apex:commandButton value="Apply" action="{!getSelected}" style="margin-left:50px" oncomplete="window.top.location='/{!programId}'; return false"/>
        </apex:outputPanel>
    </apex:form>
</apex:page>