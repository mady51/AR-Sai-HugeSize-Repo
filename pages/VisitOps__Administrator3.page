<apex:page controller="VisitOps.AdministratorController" name="calendarSettingpage" id="calendarSettingpage" sidebar="false"  showHeader="false" >    
    <apex:form style="overflow:auto;" id="CalendarSettingFormId">
        <apex:pageMessages id="myMsg1"></apex:pageMessages>
            <apex:pageBlock title="Calendar Setting" id="calendarSettingBlock">
                <div style="margin-bottom:5px;">
                Default Time <apex:inputText required="true"  value="{!defaultTime}" id="defaultTime"  style="margin-left:49px" maxlength="5">
                </apex:inputText>        
                <br/>              
                </div>
                <div style="margin-bottom:5px;">
                Default View 
				<apex:selectList id="DefViewsList" value="{!defaultView}" size="1"  required="true" style="margin-left:49px">
                    <apex:selectOptions value="{!CalenderViews}" id="CalenderView"></apex:selectOptions>
                </apex:selectList>        
                <br/>   
                </div> 
                <div>      
                Default location  
                <apex:selectList id="DeflocationsList" value="{!defaultLocation}" size="1"  required="true" style="margin-left:33px;margin-bottom:5px;">
                    <apex:selectOptions value="{!Calenderlocations}" id="CalenderLocation"></apex:selectOptions>
                </apex:selectList>
                <br/>
                </div>
                <apex:commandButton value="Apply" style="margin-left:15%" action="{!insertCalenderSettings}" id="calenderPageApplyBtn" rerender="CalendarSettingFormId"/>
            </apex:pageBlock>
    </apex:form>  
</apex:page>